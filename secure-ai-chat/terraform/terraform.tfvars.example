# ==============================================================================
# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and update the values
# ==============================================================================

# AWS Configuration
aws_region = "ap-northeast-1"
environment = "production"

# EKS Configuration
cluster_name = "secure-ai-chat-prod"
node_instance_types = ["t3.large", "t3.xlarge"]

# Domain Configuration
# NOTE: This uses a subdomain to avoid affecting the existing dataibridge.com website
domain_name = "chat.dataibridge.com"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Alert Configuration
alert_email_addresses = [
  "admin@secure-ai-chat.com",
  "devops@secure-ai-chat.com"
]

# Security Configuration
enable_deletion_protection = true
backup_retention_days = 7
cloudwatch_log_retention_days = 30

# Performance Configuration
node_desired_size = 3
node_min_size = 2
node_max_size = 10

db_instance_class = "db.t3.medium"
db_allocated_storage = 100
db_max_allocated_storage = 1000

redis_node_type = "cache.t3.micro"
redis_num_cache_clusters = 2

# WAF Configuration
waf_rate_limit = 2000

# SSL and CDN Configuration
ssl_policy = "ELBSecurityPolicy-TLS-1-2-2017-01"
cloudfront_price_class = "PriceClass_100"

# Monitoring Configuration
enable_performance_insights = true

# Tags (additional tags can be added here)
# These will be merged with default tags in main.tf
additional_tags = {
  "Cost-Center" = "Engineering"
  "Owner"       = "DevOps-Team"
  "Backup"      = "Required"
}