# ===========================================
# セキュアAIチャット - 環境変数設定
# ===========================================

# アプリケーション設定
APP_NAME="Secure AI Chat"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=false

# セキュリティ設定
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# データベース設定
DATABASE_URL="postgresql://chatuser:securepassword@localhost:5432/secure_ai_chat"
DB_ENCRYPT_KEY="your-32-character-encryption-key!"

# Redis設定
REDIS_URL="redis://localhost:6379/0"

# AI API設定（Azure OpenAI推奨）
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_API_VERSION="2024-02-01"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4"

# または OpenAI API
# OPENAI_API_KEY="your-openai-api-key"
# OPENAI_MODEL="gpt-4"

# CORS設定
ALLOWED_ORIGINS="https://localhost:3000,https://yourdomain.com"

# ログ設定
LOG_LEVEL="INFO"
ENABLE_AUDIT_LOG=true

# SSL/TLS設定
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# セッション設定
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# ファイルアップロード設定
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,txt,docx,xlsx"

# 監査ログ設定
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_USER_ACTIVITY_TRACKING=true