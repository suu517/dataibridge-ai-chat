# ===========================================
# セキュアAIチャット - フロントエンド環境変数
# ===========================================

# アプリケーション設定
NEXT_PUBLIC_APP_NAME="Secure AI Chat"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NODE_ENV="development"

# API設定
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WS_URL="ws://localhost:8000/ws"
NEXT_PUBLIC_API_VERSION="v1"

# セキュリティ設定
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=60
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_FILE_TYPES="pdf,txt,docx,xlsx"

# UI設定
NEXT_PUBLIC_THEME="light"
NEXT_PUBLIC_LANGUAGE="ja"
NEXT_PUBLIC_TIMEZONE="Asia/Tokyo"

# 機能フラグ
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# 分析・監視設定
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=""
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_SENTRY_DSN=""

# 開発用設定
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# ローカライゼーション
NEXT_PUBLIC_DEFAULT_LOCALE="ja"
NEXT_PUBLIC_SUPPORTED_LOCALES="ja,en"

# キャッシュ設定
NEXT_PUBLIC_CACHE_STRATEGY="stale-while-revalidate"
NEXT_PUBLIC_CACHE_MAX_AGE=300

# プライバシー・セキュリティ
NEXT_PUBLIC_PRIVACY_POLICY_URL="/privacy"
NEXT_PUBLIC_TERMS_OF_SERVICE_URL="/terms"
NEXT_PUBLIC_COOKIE_CONSENT=true